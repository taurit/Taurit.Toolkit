<Window
    x:Class="Taurit.Toolkit.ContdownToSleep.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Taurit.Toolkit.ContdownToSleep"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Countdown to sleep"
    Width="469.322"
    Height="213.172"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    ResizeMode="NoResize"
    WindowStyle="None"
    mc:Ignorable="d">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="background.png" Stretch="UniformToFill" />
        </Grid.Background>
        <StackPanel Margin="15" VerticalAlignment="Bottom">
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="20"
                Foreground="White">
                The computer will sleep in:
            </TextBlock>
            <TextBlock
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                FontSize="28"
                Foreground="White"
                Text="{Binding Time, Mode=OneWay}" />
        </StackPanel>

    </Grid>
</Window>
