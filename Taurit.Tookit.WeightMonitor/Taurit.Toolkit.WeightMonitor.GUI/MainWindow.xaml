<Window x:Class="Taurit.Toolkit.WeightMonitor.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taurit.Toolkit.WeightMonitor.GUI"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:xaml2009Workarounds="clr-namespace:Taurit.Toolkit.WeightMonitor.GUI.Xaml2009Workarounds"
        xmlns:defaults="clr-namespace:LiveCharts.Defaults;assembly=LiveCharts"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <DockPanel LastChildFill="True">

        <Button DockPanel.Dock="Bottom" Click="Button_Click">Save To file</Button>
        <wpf:CartesianChart Name="xchart" Grid.Row="2" Margin="10, 0, 10, 20" Hoverable="False" DataTooltip="{x:Null}"
                            Background="White" Opacity="1.0">
            <wpf:CartesianChart.AxisX>
                <wpf:Axis LabelFormatter="{Binding XFormatter}" />
            </wpf:CartesianChart.AxisX>
            <wpf:CartesianChart.Series>
                <wpf:LineSeries Values="{Binding WeightData}" />
            </wpf:CartesianChart.Series>
        </wpf:CartesianChart>
    </DockPanel>
</Window>