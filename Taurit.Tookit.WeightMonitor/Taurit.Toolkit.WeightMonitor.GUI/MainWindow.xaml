<Window x:Class="Taurit.Toolkit.WeightMonitor.GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Taurit.Toolkit.WeightMonitor.GUI"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:defaults="clr-namespace:LiveCharts.Defaults;assembly=LiveCharts"
        mc:Ignorable="d"
        Title="MainWindow" Height="338" Width="559"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        ContentRendered="MainWindow_OnContentRendered">
    <Grid x:Name="ChartWrapper" Background="White">
    <wpf:CartesianChart Name="WeightChart" Margin="20, 20, 20, 20" Hoverable="False" DataTooltip="{x:Null}"
                        Background="White">
        <wpf:CartesianChart.AxisX>
            <wpf:Axis LabelFormatter="{Binding XFormatter}" />
        </wpf:CartesianChart.AxisX>
        <wpf:CartesianChart.Series>
            <wpf:LineSeries Values="{Binding WeightData}" />
        </wpf:CartesianChart.Series>
    </wpf:CartesianChart>
    </Grid>
</Window>